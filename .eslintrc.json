{
  "extends": [
//    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime",
    "airbnb",
    "prettier"
  ],
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "es6": true
  },
  "plugins": [
    "prettier",
    "react",
    "jsx-a11y"
  ],
  "rules": {
    "max-len": ["error", {"code": 120}],
    "react/prop-types": ["warn"],
    "prettier/prettier": ["error",
      {
        "singleQuote": true,
        "trailingComma": "all",
        "printWidth": 120,
        "arrowParens": "avoid"
      }],
    "no-restricted-syntax": "off",
    "react/jsx-filename-extension": "off"
  }
}
