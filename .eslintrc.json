{
  "parser": "babel-eslint",
  "extends": [
//    "eslint:recommended",
    "react-app",
    "plugin:react/recommended",
    "airbnb",
    "prettier"
  ],
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "es6": true
  },
  "plugins": [
    "prettier",
    "react",
    "jsx-a11y"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "max-len": ["error", {"code": 120}],
    "react/prop-types": ["warn"],
    "prettier/prettier": ["error",
      {
        "singleQuote": true,
        "trailingComma": "all",
        "printWidth": 120,
        "arrowParens": "avoid"
      }],
    "no-restricted-syntax": "off",
    "react/jsx-filename-extension": "off"
  }
}
